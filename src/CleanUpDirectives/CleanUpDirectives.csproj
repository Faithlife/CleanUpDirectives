<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Description>A tool to clean up C# preprocessor directives.</Description>
    <PackageTags>preprocessor directive</PackageTags>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ArgsReading" Version="2.3.0" />
    <PackageReference Include="Faithlife.Parsing" Version="2.2.0" />
    <PackageReference Include="Glob" Version="1.1.8" />
  </ItemGroup>

</Project>
